<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".perfil"
    android:background="@drawable/degradadolineal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/degradadolineal"
        android:elevation="10dp">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Perfil"
            android:textColor="@color/moradoOsbcuro"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/btnConfigPerfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:src="@drawable/configuracionmorado" />

    </RelativeLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_width="238dp"
        android:layout_height="238dp"
        app:shapeAppearanceOverlay="@style/roundImage"
        app:srcCompat="@drawable/segundo_perfil"
        android:elevation="10dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginLeft="60dp"
        android:layout_marginTop="63dp"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:shapeAppearanceOverlay="@style/roundImage"
        app:srcCompat="@drawable/medallas"
        android:elevation="10dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginLeft="220dp"
        android:layout_marginTop="-150dp"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:shapeAppearanceOverlay="@style/roundImage"
        app:srcCompat="@drawable/coleccionables"
        android:elevation="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="180dp"
        android:layout_gravity="center"
        android:background="@drawable/degradadolineal"
        android:elevation="10dp">

        <ImageButton
            android:id="@+id/btnPInicio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/inicio" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="Inicio"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnPBuscar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/buscar" />
        <TextView
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:text="Buscar"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnPBiblio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/biblioteca" />
        <TextView
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:text="Biblioteca"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="170dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnPActi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/actividades" />
        <TextView
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:text="Actividades"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="250dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnPPerfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/perfilselect" />
        <TextView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:text="Perfil"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="360dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>
    </RelativeLayout>
</LinearLayout>