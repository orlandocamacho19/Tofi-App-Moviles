<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradadolineal"
    android:orientation="vertical"
    tools:context=".pronunciacion">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/degradadolineal"
        android:elevation="10dp">

        <ImageButton
            android:id="@+id/btnAtrasPronun"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:layout_marginLeft="-200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/regresarmorado" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-180dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="PronunciaciÃ³n"
            android:textColor="@color/moradoOsbcuro"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="500dp">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pronunciacionact1" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/pronunciacionact3"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="250dp"/>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:layout_marginTop="-460dp"
        android:layout_marginLeft="210dp">

        <ImageButton
            android:id="@+id/btnSerpiente"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/pronunciacionact2" />

        <ImageButton

            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/pronunciacionact4"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="290dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="75dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btnPronunInicio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/inicio"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="Inicio"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnPronunBuscar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/buscar" />
        <TextView
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:text="Buscar"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnPronunBiblioteca"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/biblioteca" />
        <TextView
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:text="Biblioteca"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="170dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnPronunActi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/actividadesselect" />
        <TextView
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:text="Actividades"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="250dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnPronunPerfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/perfil" />
        <TextView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:text="Perfil"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="360dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>
    </RelativeLayout>

</LinearLayout>