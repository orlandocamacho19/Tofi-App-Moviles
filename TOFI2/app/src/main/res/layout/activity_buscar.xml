<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradadolineal"
    android:orientation="vertical"
    tools:context=".buscar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/degradadolineal"
        android:elevation="10dp">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-0dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Buscar"
            android:textColor="@color/moradoOsbcuro"
            android:textSize="25sp" />

        <SearchView
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="0dp"

            android:background="@drawable/style_barra_busqueda"/>
    </RelativeLayout>

    <EditText
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="Por categorías"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_bold"
        android:textSize="25dp"/>

    <RelativeLayout
        android:id="@+id/btnFantasiaDos"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/style_categorias"
        android:elevation="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Fantasía"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnFantasia"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fantasia" />

        <TextView
            android:id="@+id/btnFantasiaTres"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Fantasía"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/style_categorias"
        android:elevation="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/misterio"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Misterio"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/style_categorias"
        android:elevation="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cienciaficcion"
            />

        <TextView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Ciencia Ficción"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/style_categorias"
        android:layout_marginTop="20dp"
        android:elevation="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/animales"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Animales"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="75dp"
        android:layout_marginTop="123dp"
        android:layout_gravity="center"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btnInicioC"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/inicio"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="Inicio"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnBuscarC"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/buscarselect" />
        <TextView
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:text="Buscar"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnBiblioC"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/biblioteca" />
        <TextView
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:text="Biblioteca"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="170dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnActiC"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/actividades" />

        <TextView

            android:layout_width="75dp"
            android:layout_height="20dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Actividades"
            android:textColor="@color/moradoOsbcuro" />

        <ImageButton
            android:id="@+id/btnPerfilC"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/perfil" />
        <TextView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:text="Perfil"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="360dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>
    </RelativeLayout>

</LinearLayout>