<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actividades_de_historias"
    android:background="@drawable/degradadolineal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/degradadolineal"
        android:elevation="10dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-60dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Actividades de historias"
            android:textColor="@color/moradoOsbcuro"
            android:textSize="25sp" />

    </RelativeLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_width="140dp"
        android:layout_height="180dp"
        app:shapeAppearanceOverlay="@style/roundImage"
        app:srcCompat="@drawable/destinofausto" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        tools:progress="70"
        android:progressTint="@color/verdePastel"
        android:progressBackgroundTint="@color/verdePastel"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="-202dp"
        app:shapeAppearanceOverlay="@style/roundImage"
        app:srcCompat="@drawable/thehappybook" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="5dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        tools:progress="70"
        android:progressTint="@color/verdePastel"
        android:progressBackgroundTint="@color/verdePastel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:text="El destino de Fausto"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-22dp"
        android:layout_marginLeft="220dp"
        android:text="El libro feliz"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:text="Por categorías"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <RelativeLayout
        android:id="@+id/btnPronunTres"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/style_categorias"
        android:elevation="10dp">

        <TextView
            android:id="@+id/btnPronunDos"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Pronunciación"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnPronunUno"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pronunciacion" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/style_categorias"
        android:elevation="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Deletreo"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/deletreo"
            />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="163dp"
        android:layout_gravity="center"
        android:background="@drawable/degradadolineal"
        android:elevation="10dp">

        <ImageButton
            android:id="@+id/btnIniciP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/inicio" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="Inicio"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnBuscarP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/buscar" />
        <TextView
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:text="Buscar"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnBiblioP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/biblioteca" />
        <TextView
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:text="Biblioteca"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="170dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnActiP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/actividadesselect" />
        <TextView
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:text="Actividades"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="250dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>

        <ImageButton
            android:id="@+id/btnPerfilP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="348dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/perfil" />
        <TextView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:text="Perfil"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="360dp"
            android:textColor="@color/moradoOsbcuro"
            android:fontFamily="@font/nunito_regular"/>
    </RelativeLayout>


</LinearLayout>