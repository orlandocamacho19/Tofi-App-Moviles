<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".lectura_progreso">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@color/morado"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnAtrasLibroProgreso"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-350dp"
            android:background="@drawable/roundedcornersicono"
            android:backgroundTint="@color/morado"
            android:src="@drawable/regresar"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="435dp"
        android:layout_height="580dp"
        android:layout_marginLeft="-430dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/aventurarecorte">

        <TextView
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/roundedcornersclick"
            android:text="                                                                  DespuÃ©s de tantas horas de camino, los dos viajeros por fin encontraron su destino"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="435dp"
        android:layout_height="90dp"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="-440dp"
        android:background="@color/morado">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/siguiente"
            android:rotation="180" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/siguiente"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/amarilloRelleno"
            tools:progress="70" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/audifonos"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/configuracion"/>

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="15dp"
            android:background="@color/amarilloRelleno"/>
    </RelativeLayout>

</LinearLayout>